<section id="current"> 
    <form action="" class="form">
    <h1>{{user.first_name}} {{user.last_name}}</h1>
    <div>   
        <label for="inputId">Id</label>
        <input type="text" id="inputId" value="{{user._id}}" readonly>
    </div>
 
    <div>
        <label for="inputEmail">Email</label>
    <input type="text" id="inputEmail" value="{{user.email}}" readonly>
    </div>
    
